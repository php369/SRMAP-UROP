# Production Environment Configuration for Render

# Environment
NODE_ENV=production
PORT=10000

# Database - MongoDB Atlas
# Get from: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/srm-portal?retryWrites=true&w=majority

# JWT Configuration - Use strong random secrets
# Generate with: openssl rand -base64 32
JWT_SECRET=<generate-strong-secret-32-chars-minimum>
JWT_REFRESH_SECRET=<generate-strong-secret-32-chars-minimum>
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=<your-google-client-id>
GOOGLE_CLIENT_SECRET=<your-google-client-secret>
GOOGLE_REDIRECT_URI=https://your-render-app.onrender.com/api/v1/auth/google/callback

# Cloudinary Configuration
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=<your-cloudinary-cloud-name>
CLOUDINARY_API_KEY=<your-cloudinary-api-key>
CLOUDINARY_API_SECRET=<your-cloudinary-api-secret>

# Application Configuration
FRONTEND_URL=https://your-vercel-app.vercel.app
ALLOWED_ORIGINS=https://your-vercel-app.vercel.app

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
