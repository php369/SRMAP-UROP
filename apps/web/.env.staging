# SRM Project Portal - Staging Environment Variables

# API Configuration
VITE_API_BASE_URL=https://srm-portal-api-staging.onrender.com
VITE_API_VERSION=v1

# Application Configuration
VITE_APP_NAME=SRM Project Portal (Staging)
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=staging

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANIMATIONS=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=50MB
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,zip,rar

# Real-time Features
VITE_ENABLE_WEBSOCKETS=true
VITE_WEBSOCKET_URL=wss://srm-portal-api-staging.onrender.com

# Development Tools (enabled in staging for testing)
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true