# Production Environment Configuration Template for Frontend
# Copy this file to .env.production and fill in the actual values

# API Configuration (REQUIRED)
VITE_API_URL=https://your-backend-domain.com
VITE_API_BASE_URL=https://your-backend-domain.com/api/v1

# Application Configuration
VITE_APP_NAME=SRM-AP Project Portal
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Project management portal for SRM University-AP

# Google OAuth Configuration (REQUIRED)
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Optional: CDN and Asset Configuration
VITE_CDN_URL=https://your-cdn-domain.com
VITE_ASSETS_URL=https://your-assets-domain.com

# Optional: Third-party Services
VITE_SENTRY_DSN=your-sentry-dsn-if-using-error-reporting
VITE_GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Optional: Development/Debug Settings (set to false in production)
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false

# Optional: Performance Settings
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true