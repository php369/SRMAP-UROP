{
  "name": "@srm-portal/api",
  "version": "1.0.0",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "seed": "tsx src/scripts/seed.ts",
    "reset-db": "tsx src/scripts/reset-db.ts",
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:up": "tsx src/scripts/migrate.ts up",
    "migrate:down": "tsx src/scripts/migrate.ts down",
    "migrate:status": "tsx src/scripts/migrate.ts status",
    "db:reset": "AUTO_CONFIRM=true tsx src/scripts/reset-db.ts --yes",
    "db:reset-seed": "AUTO_CONFIRM=true tsx src/scripts/reset-db.ts --yes --seed",
    "deploy": "node scripts/deploy.js",
    "deploy:prod": "NODE_ENV=production node scripts/deploy.js",
    "docker:build": "docker build -t srm-portal-api .",
    "docker:run": "docker run -p 3001:3001 --env-file .env srm-portal-api",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "bcryptjs": "^2.4.0",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.0",
    "express-validator": "^7.0.0",
    "google-auth-library": "^9.4.0",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^8.0.0",
    "multer": "^1.4.0",
    "socket.io": "^4.7.0",
    "swagger-jsdoc": "^6.2.0",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@srm-portal/config": "workspace:*",
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/multer": "^1.4.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.0",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.3",
    "supertest": "^6.3.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}